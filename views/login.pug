doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href='/styles.css' rel='stylesheet')
    script(src="https://unpkg.com/htmx.org")

body
    div(class="flex justify-center items-center h-screen") 
      div(class="flex-col mx-auto bg-blue-100 w-64 text-center p-4 border-solid border-2 border-blue-300") 
        h1 Login
        form(class="p-4" hx-post="login")
          input(class="p-2" placeholder="username" name="username")
          input(class="mt-2 p-2" placeholder="password" name="password")
          button(class="m-4 p-2 w-32 border-solid border-2 border-blue-300" type="submit") Submit
